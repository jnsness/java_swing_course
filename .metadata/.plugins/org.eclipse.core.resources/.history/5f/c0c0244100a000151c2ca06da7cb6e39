import java.awt.Color;
import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.io.File;
import java.net.URL;

import javax.imageio.ImageIO;
import javax.swing.JPanel;

public class SnapShot extends LogoFrameView {

	public SnapShot() {
	}

	@Override
	public void paintComponent(Graphics g) {
		super.paintComponent(g);

		g.setColor(Color.GRAY);
		g.drawLine(90, 45, 90, 780);
		g.drawLine(90, 45, 810, 45);
		g.drawLine(810, 45, 810, 90);
		g.drawLine(810, 90, 90, 90);

	}
	
	int getSnapShot(JPanel panel, String uuid) {
		BufferedImage bufImg = new BufferedImage(panel.getSize().width, panel.getSize().height, BufferedImage.TYPE_INT_RGB);
		panel.paint(bufImg.createGraphics());
		File imageFile = new File("snapshots/"+uuid+".jpg");
		try {
			imageFile.createNewFile();
			ImageIO.write(bufImg, "jpeg", imageFile);
		} 
		catch (Exception ex) 
		{
			
		}
		return 1;
	}
	
}
