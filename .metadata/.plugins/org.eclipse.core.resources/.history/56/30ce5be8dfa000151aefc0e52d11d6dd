import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;

public class DbQueryBuilder {

	private Connection con;
	private PreparedStatement selectStmt;
	
	public DbQueryBuilder() {
	}

	public int getavgDistanceAs(String uuid) {

		try {
			Class.forName("org.sqlite.JDBC");
			con = DriverManager.getConnection("jdbc:sqlite:test.db");


			statement = con.prepareStatement("Select avg_distance_as from avg_distance where UUID = ?");
			
			selectStmt = connection.createStatement();
			
			
			ResultSet rs = selectStmt
					.executeQuery("Select avg_distance_as from avg_distance where UUID = ?;");
			selectStmt.setS
			
			System.out.println("Select avg_distance_as from avg_distance where UUID ="
					+ "'" + uuid + "';");
			while (rs.next()) {
				System.out.println(rs.getDouble(1)); // First Column
				System.out.println("test");
			}
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			try {
				selectStmt.close();
				con.close();
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
		return 0;
	}

}
